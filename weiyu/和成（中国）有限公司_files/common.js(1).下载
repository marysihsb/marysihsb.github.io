$(document).ready(function(){
    //普通banner单图隐藏
    var banli2=$(".HomeBan .BanList li").size();
    if(banli2<=1)
    {
    	$(".HomeBan .TabList").hide();
        $(".HomeBan .prev, .HomeBan .next").hide();
    }
})




